<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/fotoLogo"
        android:layout_width="178dp"
        android:layout_height="153dp"
        android:contentDescription="@string/lbl_LogoFoto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108"
        app:srcCompat="@drawable/coin_1320568179258079841" />

    <EditText
        android:id="@+id/USD"
        android:layout_width="180dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:autofillHints="@string/lbl_USD"
        android:ems="10"
        android:hint="@string/lbl_USD"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fotoLogo"
        app:layout_constraintVertical_bias="0.111" />

    <EditText
        android:id="@+id/BRL"
        android:layout_width="180dp"
        android:layout_height="47dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:autofillHints="@string/lbl_BRL"
        android:ems="10"
        android:hint="@string/lbl_BRL"
        android:inputType="textPersonName"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fotoLogo"
        app:layout_constraintVertical_bias="0.112" />

    <Button
        android:id="@+id/convert1"
        android:layout_width="110dp"
        android:layout_height="46dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#CCAA03"
        android:onClick="click"
        android:text="@string/lbl_Convert1"
        app:layout_constraintEnd_toEndOf="@+id/USD"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/USD"
        app:layout_constraintTop_toBottomOf="@+id/USD" />

    <Button
        android:id="@+id/convert2"
        android:layout_width="110dp"
        android:layout_height="46dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="34dp"
        android:backgroundTint="#CCAA03"
        android:onClick="click2"
        android:text="@string/lbl_Convert2"
        app:layout_constraintEnd_toEndOf="@+id/BRL"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/BRL"
        app:layout_constraintTop_toBottomOf="@+id/BRL" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:backgroundTint="#CCAA03"
        android:onClick="reset"
        android:text="@string/lbl_Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.808" />

</androidx.constraintlayout.widget.ConstraintLayout>